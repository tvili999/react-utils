{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "semi": [2, "always"],
      "indent": ["error", 4],
      "object-curly-spacing": ["error", "always"],
      "max-len": ["error", { "code": 100 }]
    },
    "settings": {
      "react": {
        "version": "16.3"
      }
    }
}
